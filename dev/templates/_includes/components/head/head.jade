
mixin head(data)
	- var project_mame = 'LolTV'
		unless (data)
			- var data = {}
	head
		// page name
		title=data.title ? project_mame + ' | ' + data.title : ' | New page'
		// Required meta tags
		meta(charset="utf-8")
		link(rel='shortcut icon', sizes='16x16', href='s/images/favicon/favicon.png')
		link(rel='shortcut icon', sizes='32x32', href='s/images/favicon/favicon@2x.png')
		link(rel='apple-touch-icon', sizes='120x120', href='s/images/favicon/apple-touch-icon.png')
		link(rel='apple-touch-icon', sizes='152x152', href='s/images/favicon/apple-touch-icon-152x152.png')
		link(rel='apple-touch-icon', sizes='167x167', href='s/images/favicon/apple-touch-icon-167x167.png')
		link(rel='apple-touch-icon', sizes='180x180', href='s/images/favicon/apple-touch-icon-180x180.png')
		meta(name='msapplication-TileImage', content='s/images/favicon/icon-normal.png')
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		// Optional styles
		link(href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i&amp;subset=cyrillic" rel="stylesheet")
		link(href='s/css/all.css', rel='stylesheet')